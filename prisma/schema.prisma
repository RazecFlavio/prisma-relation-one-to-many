// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Authors {
  id   String @id @default(uuid())
  name String @unique

  books Books[]
  @@map("authors")
}

model Books {
  id        String  @id @default(uuid())
  name      String  @unique
  author_id String
  author    Authors @relation(fields: [author_id], references: [id])

  @@map("books")
}
